{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Navegador_file",
            "type": "shell",
            "command": "Navegador",
            "windows": {
                "command": "explorer.exe"
            },
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Navegador_localhost",
            "type": "shell",
            "command": "Navegador",
            "windows": {
                "command": "explorer.exe"
            },
            "args": [
                "http://localhost:3020/${fileBasename}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "node",
            "type": "shell",
            "command": "node",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "problemMatcher": []
        },
    ],
    "problemMatchers": []
}